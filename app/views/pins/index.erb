<% @pins.each do | pin | %>
	<li>
	<%= pin.title %>
	<img src="<%= pin.image_url %>" alt="">
	<span><%= pin.likes %></span>
	</li>
	<%= link_to 'like', pins_increment_path(id: pin.id) %>
	<% pin.comments.each do | comment | %>
		<%= comment.username %><br/>
		<%= comment.body %>
	<% end %>
	<br/>

	<%= form_for(@comment, url: pins_create_path(@comment, pin_id: pin.id), method: :post) do |f| %>
	  Username: <%= f.text_field :username %><br />
	  Comment : <%= f.text_area :body %><br />
	  <%= f.submit %>
	<% end %>
<% end %>